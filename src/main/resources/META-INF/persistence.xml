<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <properties>
      <!-- JDBC (clés JPA standard) -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jee_location"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="passer"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

      <!-- Hibernate -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.jdbc.time_zone" value="UTC"/>
      <!-- Ne PAS définir hibernate.dialect pour Postgres (auto-détecté) -->
    </properties>
  </persistence-unit>
</persistence>
